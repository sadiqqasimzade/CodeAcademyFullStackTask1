@model LoginVM
@{
	ViewData["Title"] = "Register";
}
<div class="page-content pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-xl-8 col-lg-10 col-md-12 m-auto">
				<div class="row">
					<div class="col">
						<div class="login_wrap widget-taber-content background-white">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h1 class="mb-5">Login</h1>
									<p class="mb-30">Don't have an account? <a asp-action=Register>Create here</a></p>
								</div>
								<form method="post">

									<div class="form-group">
										<input asp-for=UsernameOrEmail placeholder="Email/Username" />
									</div>
									<div class="form-group">
										<input asp-for=Password type="password" name="password" placeholder="Password" />
									</div>
									<div asp-validation-summary=ModelOnly class="">

									</div>
									<div class="login_footer form-group mb-50">
										<div class="chek-form">
											<div class="custome-checkbox">
												<input class="form-check-input" asp-for=RememberMe />
												<label class="form-check-label" asp-for=RememberMe><span>Remember me</span></label>
											</div>
										</div>
										<a class="text-muted" >Forgot password?</a>
									</div>
									<div class="form-group">
										<button type="submit" class="btn btn-heading btn-block hover-up">Log in</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section scripts{
	<partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}